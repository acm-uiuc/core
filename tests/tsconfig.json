{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/tests",
    "rootDir": "../",
    "resolveJsonModule": true
  },
  "include": [
    "../src/",
    "./e2e/**/*.ts",
    "./live/**/*.ts",
    "./unit/**/*.ts",
    "./common/**/*.ts"
  ],
  "exclude": ["../node_modules", "../dist"]
}
